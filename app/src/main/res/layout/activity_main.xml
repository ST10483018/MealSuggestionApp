<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSuggestion"
        android:layout_width="159dp"
        android:layout_height="108dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="127dp"
        android:text="Meal suggestion"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTimeOfDay" />

    <EditText
        android:id="@+id/edtTimeOfDay"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtSuggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrompt" />

    <TextView
        android:id="@+id/txtPrompt"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-black"
        android:text="Enter Time of Day (e.g., Morning, Afternoon, Dinner)"
        android:textAlignment="textStart"
        android:textColor="#DC281A"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/edtTimeOfDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSuggest"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="194dp"
        android:backgroundTint="#43A047"
        android:text="Suggest Meal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSuggestion" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="117dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="177dp"
        android:backgroundTint="#FFB300"
        android:text="Clear"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSuggest"
        app:layout_constraintTop_toBottomOf="@+id/txtSuggestion" />

</androidx.constraintlayout.widget.ConstraintLayout>